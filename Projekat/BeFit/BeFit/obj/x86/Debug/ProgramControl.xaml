<UserControl
    x:Class="BeFit.ProgramControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BeFit"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="100"
    d:DesignWidth="300">

    <Grid>
        <Border BorderThickness="2" BorderBrush="Black" Height="100" Width="300">
        <Canvas>
                <TextBlock FontSize="17" HorizontalAlignment="Left" Margin="21,25,0,0" Text="Naziv Programa: " TextWrapping="Wrap" VerticalAlignment="Top"/>
                <TextBlock FontSize="17" HorizontalAlignment="Left" Margin="21,50,0,0" Text="Težina: " TextWrapping="Wrap" VerticalAlignment="Top"/>
                <TextBlock x:ConnectionId='1' Name="nazivProgramaTextBlock" FontSize="17" HorizontalAlignment="Left" Margin="151,25,0,0" Text="__ " TextWrapping="Wrap" VerticalAlignment="Top"/>
                <TextBlock x:ConnectionId='2' Name="tezinaProgramaTextBlock" FontSize="17" HorizontalAlignment="Left" Margin="151,50,0,0" Text="__ " TextWrapping="Wrap" VerticalAlignment="Top"/>
            </Canvas>
        </Border>
    </Grid>
</UserControl>

