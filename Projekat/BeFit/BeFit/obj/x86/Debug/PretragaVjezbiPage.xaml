<Page
    x:Class="BeFit.PretragaVjezbiPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BeFit"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

	<Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

		<VisualStateManager.VisualStateGroups>
			<VisualStateGroup x:ConnectionId='1' x:Name="VisualStateGroup">
				<VisualState x:ConnectionId='2' x:Name="Phone">
					<VisualState.StateTriggers>
						<AdaptiveTrigger MinWindowWidth="0"/>
					</VisualState.StateTriggers>
					<VisualState.Setters>
						<Setter Target="StekGlavni.Width" Value="500"/>
						<Setter Target="Stek1.Width" Value="200"/>
						<Setter Target="Stek2.Width" Value="300"/>
						<Setter Target="comboboxMisicneGrupe.Width" Value="100"/>
					</VisualState.Setters>
				</VisualState>
				<VisualState x:ConnectionId='3' x:Name="Tablet">
					<VisualState.StateTriggers>
						<AdaptiveTrigger MinWindowWidth="700"/>
					</VisualState.StateTriggers>
					<VisualState.Setters>
						<Setter Target="StekGlavni.Width" Value="700"/>
						<Setter Target="Stek1.Width" Value="300"/>
						<Setter Target="Stek2.Width" Value="400"/>
						<Setter Target="comboboxMisicneGrupe.Width" Value="150"/>

					</VisualState.Setters>
				</VisualState>
				<VisualState x:ConnectionId='4' x:Name="Desktop">
					<VisualState.StateTriggers>
						<AdaptiveTrigger MinWindowWidth="1000"/>
					</VisualState.StateTriggers>
					<VisualState.Setters>
						<Setter Target="StekGlavni.Width" Value="1000"/>
						<Setter Target="Stek1.Width" Value="400"/>
						<Setter Target="Stek2.Width" Value="600"/>
						<Setter Target="comboboxMisicneGrupe.Width" Value="250"/>

					</VisualState.Setters>
				</VisualState>
			</VisualStateGroup>
		</VisualStateManager.VisualStateGroups>

		<StackPanel x:ConnectionId='5' x:Name="StekGlavni" HorizontalAlignment="Left" Orientation="Horizontal" VerticalAlignment="Top" ScrollViewer.HorizontalScrollBarVisibility="Disabled">

			<StackPanel x:ConnectionId='6' x:Name="Stek1" HorizontalAlignment="Center" Orientation="Vertical" VerticalAlignment="Top" ScrollViewer.HorizontalScrollBarVisibility="Disabled">

				<TextBlock Text="Odaberi misicnu grupu" FontSize="25" TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Left" Margin="30, 30, 30, 30"/>

				<ComboBox x:ConnectionId='9' Name="comboboxMisicneGrupe" HorizontalAlignment="Center" Margin="30, 30, 30, 30" />

			</StackPanel>

			<StackPanel x:ConnectionId='7' x:Name="Stek2" HorizontalAlignment="Center" Orientation="Vertical" VerticalAlignment="Top" ScrollViewer.HorizontalScrollBarVisibility="Disabled">

				<TextBlock Text="Vjezbe" FontSize="25" TextWrapping="Wrap" HorizontalAlignment="Left" TextAlignment="Center" Margin="30, 30, 30, 30"/>

				<ScrollViewer>

					<StackPanel x:ConnectionId='8' x:Name="StekListaVjezbi" HorizontalAlignment="Center" Orientation="Vertical" VerticalAlignment="Top" ScrollViewer.HorizontalScrollBarVisibility="Disabled">



					</StackPanel>

				</ScrollViewer>

			</StackPanel>

		</StackPanel>

	</Grid>
</Page>

